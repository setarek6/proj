for(i=0;i<size;i++){
    for(j=0;j<size;j++){
        a=world2[i][j];
        for(b=-1;b<=1;b++){
            for(c=-1;c<=1;c++){
                if(world2[i+b][j+c]==a-1) {
                    world3[i+b][j+c]=a;
                }
            }
        }

    }
}



}

void PutNumbers(char world[][20],int x,int y,int size){
int i,j,k,a;
if(x>y) a=x;
else a=y;
for(k=1;;k<=a){
for(i=-k;i<=k;i++){
    for(j=-k;j<=k;j++){
        if(j==k||i==k||j==-k||i==-k){
            if(x+i>=0&&y+i>=0&&x+i<size&&y+i<size&&world[x+i][y+j]=='.') world2[x+i][y+j]=k;
        }
    }
    k++;
}
}
world2[x][y]=0;
}
